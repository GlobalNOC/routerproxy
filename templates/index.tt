        <div class="host_command">
          <select class="host_command_select" id="host_command_select"></select>
          <input class="host_command_text" id="host_command_text" type="text"></input>
          <input class="host_command_button" type="button" value="Submit" onclick="submitCommand(this)"></input>
        </div>

        <div class="result" id="result">
          <pre><code class="result_pre" id="result_pre">
          </code></pre>
        </div>

        <div class="result" id="menu_result">
        </div>
